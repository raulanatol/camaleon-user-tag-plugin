<div class="panel panel-default panel-lite plugin-panel-user-tags">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('admin.post_type.tags') %></h3>
    <ul class="panel-controls">
      <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
    </ul>
  </div>
  <div class="panel-body ">
    <div class="form-group" style="margin-left: 0; margin-right: 0">
      <input type="text" name="tags" class="tagsinput" value="<%= params[:tags] || (@user.tags.join(',') unless @user.new_record? || @user.tags.nil?) %>"/>
    </div>
  </div>
</div>

<script type="text/javascript">
    jQuery(function () {
        init_user_edit({
            _user_tags_path: '<%= admin_plugins_camaleon_user_tag_tags_path %>'
        });
    });

</script>